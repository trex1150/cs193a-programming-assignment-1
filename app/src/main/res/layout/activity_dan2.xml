<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trx11.damndaniel.DanielActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looping Tracks (start/stop)"
            android:textSize="12pt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:text="Track 1"
            android:layout_weight="1"
            android:onClick="track1"
            android:id="@+id/check1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:text="Track 2"
            android:layout_weight="1"
            android:onClick="track2"

            android:id="@+id/check2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:text="Track 3"
            android:onClick="track3"
            android:layout_weight="1"
            android:id="@+id/check3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track 4"
            android:textSize="5pt"
            android:onClick="track4"
            android:layout_weight="1"
            android:id="@+id/check4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="5pt"
            android:text="Track 5"
            android:onClick="track5"
            android:layout_weight="1"
            android:id="@+id/check5"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESS THEM ALL"
        android:textSize="12pt"
        android:layout_gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #1"
            android:onClick="damn1"
            android:layout_weight="1"
            android:id="@+id/button1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #2"
            android:onClick="damn2"
            android:layout_weight="1"
            android:id="@+id/button2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #3"
            android:onClick="damn3"
            android:layout_weight="1"
            android:id="@+id/button3"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #4"
            android:onClick="damn4"
            android:layout_weight="1"
            android:id="@+id/button4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #5"
            android:onClick="damn5"
            android:layout_weight="1"
            android:id="@+id/button5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #6"
            android:onClick="damn6"
            android:layout_weight="1"
            android:id="@+id/button6"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #7"
            android:onClick="damn7"
            android:layout_weight="1"
            android:id="@+id/button7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #8"
            android:onClick="damn8"
            android:layout_weight="1"
            android:id="@+id/button8"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Damn #9"
            android:onClick="damn9"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel #1"
            android:onClick="daniel1"
            android:layout_weight="1"
            android:id="@+id/daniel1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel #2"
            android:onClick="daniel3"
            android:layout_weight="1"
            android:id="@+id/daniel2"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel #3"
            android:onClick="daniel4"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel #4"
            android:onClick="daniel5"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back at it again!"
        android:layout_gravity="center"
        android:onClick="back3"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="goHome"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"/>

</LinearLayout>
